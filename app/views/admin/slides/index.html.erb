<div class='toolbar'>
	<ul class='actions'>
		<li id="new_product_link">
			<%= button_link_to t("slideshow_type.new_page"), new_admin_slide_url, {:icon => 'add'} %>
		</li>
	</ul>
	<br class='clear' />
</div>

<h1><%=t("slideshow_type.slideshow") %></h1>

<table class="index">
	<tr>
		<th><%= Spree::Slide.human_attribute_name(:title) %></th>
		<th><%= Spree::Slide.human_attribute_name(:enabled) %></th>
		<th><%= t("action") %></th>
	</tr>
	<tbody>
		<% @slide.each do |slide| %>
		<tr class="<%= cycle('even', 'odd') %>" id="<%= dom_id slideshow_type %>">
			<td><%= slideshow_type.title %></td>
			<td><%= slideshow_type.url %></td>
			<td><%= slideshow_type.position %></td>
			<td>
				<%= link_to_edit slide %> &nbsp;
				<%= link_to_delete slide %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>